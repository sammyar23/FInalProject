extends layout

block content
  h1 Build Your PC
  form(action="/submit-build" method="post")
    fieldset
      legend Choose Your Components

      label(for="cpu") CPU
      select(name="cpu" id="cpu-select")
        each cpu in cpus
          option(value=cpu.socket) #{cpu.name} - $#{cpu.price}

      label(for="motherboard") Motherboard
      select(name="motherboard" id="motherboard-select")
        each mb in motherboards
          option(value=mb.socket) #{mb.name} - $#{mb.price}

      label(for="gpu") GPU
      select(name="gpu" id="gpu-select")
        each gpu in gpus
          option(value=gpu.id) #{gpu.name} - $#{gpu.price}

      label(for="memory") Memory
      select(name="memory" id="memory-select")
        each mem in memory
          option(value=mem.id) #{mem.name} - $#{mem.price}

      // Add fields for other components as needed

    input(type="submit" value="Build")

  script(src='/js/updateComponents.js')
  script(src='/js/buildPcFormHandler.js')
